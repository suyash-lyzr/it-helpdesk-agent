# ============================================
# REQUIRED Environment Variables
# ============================================
# These variables MUST be set for the application to work

# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=your_mongodb_connection_string_here

# Secret key for encrypting integration credentials
# Should be a long, random string (at least 32 characters)
INTEGRATION_SECRET_KEY=your_integration_secret_key_here

# ============================================
# Optional Environment Variables
# ============================================

# MongoDB Database Name (defaults to "it_helpdesk_agent")
MONGODB_DB=it_helpdesk_agent

# Base URL for the application
# For production, set this to your Vercel deployment URL
# Example: https://your-app.vercel.app
BASE_URL=http://localhost:3000

# Public App URL (used for OAuth callbacks and API endpoints)
# For production, set this to your Vercel deployment URL
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Public Base URL (used in frontend components)
# For production, set this to your Vercel deployment URL
NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app

# Encryption Key (has a default fallback, but recommended to set)
ENCRYPTION_KEY=your_encryption_key_here

# ============================================
# ServiceNow Integration (Optional)
# ============================================
# Only required if using ServiceNow integration

SN_CLIENT_ID=your_servicenow_client_id
SN_CLIENT_SECRET=your_servicenow_client_secret
SN_INSTANCE_URL=https://your-instance.service-now.com
SN_REDIRECT_URI=https://your-app.vercel.app/api/oauth/servicenow/callback

# ============================================
# Jira Integration (Optional)
# ============================================
# Only required if using Jira integration

JIRA_CLIENT_ID=your_jira_client_id
JIRA_CLIENT_SECRET=your_jira_client_secret
JIRA_REDIRECT_URI=https://your-app.vercel.app/api/oauth/jira/callback
